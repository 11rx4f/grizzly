<?xml version="1.0" encoding="UTF-8"?>
<project name="Project Eclipse Grizzly"
         xmlns="http://maven.apache.org/DECORATION/1.3.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd">

    <!-- Grizzly logo banner on all pages -->
    <bannerLeft>
        <!-- Reflow Maven Skin, but with "Reflow" highlighted -->
        <name><![CDATA[		
          <img src="images/grizzlyHead.png"/>&nbsp;<span class="color-black">Project</span> Eclipse Grizzly
          ]]>
        </name>
        <href>index.html</href>
    </bannerLeft>
    <version position="none"/>
    <skin>
        <groupId>lt.velykis.maven.skins</groupId>
        <artifactId>reflow-maven-skin</artifactId>
        <version>1.1.1</version>
    </skin>

    <custom>
        <reflowSkin>
            <!-- =============== Global skin configuration ================= -->

            <!-- Make this to 'false' for local development, i.e. file:// URLs -->
            <protocolRelativeURLs>true</protocolRelativeURLs>  

            <!-- Comment this out for local development.   -->
            <absoluteResourceURL>https://eclipse-ee4j.github.io/grizzly</absoluteResourceURL>

            <!-- Brand on the top menu bar -->
            <brand>
                <name>
                    <![CDATA[Project <span class="color-brown">Eclipse Grizzly</span>]]>
                </name>
                <href>index.html</href>
            </brand>

            <!-- Slogan appears under the Grizzly Head logo -->
            <slogan>NIO Event Development Simplified</slogan>

            <!-- Syntax highlighting Configuration -->
            <highlightJs>true</highlightJs>
            <highlightJsTheme>solarized_dark</highlightJsTheme>

            <!-- Skin theme -->
            <theme>bootswatch-cosmo</theme>

            <!-- Top navbar configuration -->
            <topNav>Documentation|Download</topNav>

            <!-- Bottom nav configuration -->
            <bottomNav maxSpan="12">
                <column>Main|Download</column>
                <column>Contribute</column>
                <column>Project Info</column>
            </bottomNav>
			
            <!-- Table of Contents - displayed on all pages unless explicitly
                 disabled on a per-page basis. -->
            <toc>top</toc>
            <tocTopMax>4</tocTopMax>

            <!-- Misc Configuration -->
            <smoothScroll>true</smoothScroll>
            <skinAttribution>false</skinAttribution>

            <!-- Per-Page Configuration (allows overriding of global) -->
            <pages>
                <!-- index.html -->
                <index project="site">
                    <sections>
                        <body/>
                        <columns>3</columns>
                    </sections>
                    <toc>true</toc>
                    <titleTemplate>Project Eclipse Grizzly</titleTemplate>
               </index>

                <!-- contribute.html -->
                <contribute>
                    <sections>
                        <body/>
                        <columns>3</columns>
                    </sections>
                    <toc>false</toc>
                </contribute>

                <!-- mailing.html -->
                <mailing>
                    <sections>
                        <body/>
                        <columns>3</columns>
                    </sections>
                    <toc>false</toc>
                </mailing>

                <!-- documentation.html -->
                <documentation>
                    <toc>false</toc>
                </documentation>

                <!-- dependencies.html -->
                <dependencies>
                    <sections>
                        <body/>
                        <columns>2</columns>
                        <body/>
                        <columns>2</columns>
                    </sections>
                    <toc>false</toc>
                </dependencies>

            </pages>
        </reflowSkin>
    </custom>

